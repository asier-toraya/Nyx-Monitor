{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nyx Monitor",
  "version": "0.1.0",
  "identifier": "com.asier.nyxmonitor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nyx Monitor",
        "width": 1760,
        "height": 1080,
        "minWidth": 1380,
        "minHeight": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico", "icons/icon.icns"]
  }
}

